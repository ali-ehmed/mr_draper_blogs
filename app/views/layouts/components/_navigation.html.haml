%nav(class="navbar navbar--header fixed-top navbar-expand-lg navbar-light bg-primary ")
  .container
    %a(href="/" class="navbar-brand glow text-white") Mr.Draper
    %button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#applicationNavbar" aria-controls="applicationNavbar" aria-expanded="false" aria-label="Toggle navigation")
      %span(class="navbar-toggler-icon")
    %div(class="collapse navbar-collapse" id="applicationNavbar")
      %ul.navbar-nav.mr-auto
        - if content_for?(:left_navigation_list)
          = yield(:left_navigation_list)

      %ul.navbar-nav.ml-auto
        - if content_for?(:right_navigation_list)
          = yield(:right_navigation_list)
        - if person_signed_in?
          %li.nav-item.dropdown
            %a(href="#" class="nav-link dropdown-toggle navbar__profile-dropdown p-0" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
              = current_person.gravatar_image_tag
            %div(class="dropdown-menu dropdown-menu-right animate slide-in")
              .navbar__profile-details.px-3
                .d-flex
                  = current_person.gravatar_image_tag
                  .pl-3
                    %span.font-size-3
                      = current_person.name
              .dropdown-divider
              = link_to 'My Profile', '#', class: 'dropdown-item font-size-1'
              .dropdown-divider
              = link_to 'Sign Out', destroy_person_session_path, method: :delete, class: 'dropdown-item font-size-1'
        - else
          %li.nav-item
            = link_to 'Login', new_person_session_path, class: 'nav-link text-white font-weight-light'

