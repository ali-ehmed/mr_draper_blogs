%header(class='app-header app-header-dark')
  .top-bar
    .top-bar-brand
      = link_to root_path do
        = image_tag 'Hingeto-Header-Logo.png', style: 'height: 32px;width: auto;'

    .top-bar-list
      %div(class='top-bar-item px-2 d-md-none d-lg-none d-xl-none')
        %button(class='hamburger hamburger-squeeze' type='button' data-toggle='aside' aria-label="toggle menu")
          %span(class="hamburger-box")
            %span(class="hamburger-inner")

      .top-bar-item.top-bar-item-full
        %form(class='top-bar-search')
          .input-group.input-group-search
            %div(class="input-group-prepend")
              %span(class="input-group-text")
                %span(class="oi oi-magnifying-glass")

            = text_field_tag :q, nil, class: 'form-control', placeholder: "Search #{opposite_business_category.pluralize}", data: { controller: 'autocomplete', autocomplete_url: businesses_path, autocomplete_visit_url: available_to_sell_url(current_user.business_category.downcase)}

      %div(class="top-bar-item top-bar-item-right px-0 d-none d-sm-flex")
        -# Right Corner Dropdown
        .dropdown
          %button(class="btn-account d-none d-md-flex" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
            %span(class="account-summary pr-lg-4 d-none d-lg-block")
              %span(class="account-name")= current_user.name
              %span(class="account-description")
                = current_user.business_name
                |
                %span(class="badge badge-subtle badge-success")= current_user.business_category

          -# Divider
          %div(class="dropdown-arrow dropdown-arrow-left")

          %div(class="dropdown-menu")
            %h6(class="dropdown-header d-none d-md-block d-lg-none")= current_user.name
            = link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do
              %span(class="dropdown-icon oi oi-account-logout")
              Logout